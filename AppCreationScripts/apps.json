{
  "Sample": {
    "Title": "A WPF application that calls a Web API running on ASP.NET Core 2.0 protected by Azure AD using OAuth 2.0 access tokens. ",
    "Level": 200,
    "Client": ".NET Desktop (WPF)",
    "Service": "ASP.NET Core Web API"
  },

  /*
    This section describes the Azure AD Applications to configure, and their dependencies
  */
  "AADApps": [
    {
      "Id": "service",
      "Name": "TodoListService",
      "IsPublicClient": false,
      "HomePage": "https://localhost:44351/"
    },
    {
      "Id": "client",
      "Name": "TodoListClient",
      "IsPublicClient": true,
      "RequiredResourcesAccess": [
        {
          "Resource": "service",
          "DelegatedPermissions": [ "user_impersonation" ]
        }
      ]
    }
  ],

  /*
    This section describes how to update the code in configuration files from the apps coordinates, once the apps
    are created in Azure AD.
    Each section describes a configuration file, for one of the apps, it's type (XML, JSon, plain text), its location
    with respect to the root of the sample, and the mappping (which string in the config file is mapped to which value
  */
  "CodeConfiguration": [
    {
      "App": "service",
      "SettingKind": "Text",
      "SettingFile": "\\..\\TodoListService\\appsettings.json",
      "Mappings": [
        {
          "key": "Domain",
          "value": "$tenantName"
        },
        {
          "key": "TenantId",
          "value": "$tenantId"
        },
        {
          "key": "ClientId",
          "value": "service.AppId"
        }
      ]
    },

    {
      "App": "client",
      "SettingKind": "XML",
      "SettingFile": "\\..\\TodoListClient\\App.Config",
      "Mappings": [
        {
          "key": "ida:Tenant",
          "value": "$tenantName"
        },
        {
          "key": "ida:ClientId",
          "value": ".AppId"
        },
        {
          "key": "ida:RedirectUri",
          "value": ".ReplyUrls"
        },
        {
          "key": "todo:TodoListResourceId",
          "value": "service.AppId"
        },
        {
          "key": "todo:TodoListBaseAddress",
          "value": "service.HomePage"
        }
      ]
    }
  ]
}
